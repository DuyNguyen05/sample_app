<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate  %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
    <%= link_to user.name, "/users/#{user.id}" %> ||
      <% if current_user.admin? && current_user != user && !user.admin? %>
      <%= link_to "Delete" , "/users/#{user.id}" ,method: :delete , data: {confirm: "Mày đã chắc chắn chưa ?"}  %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>

